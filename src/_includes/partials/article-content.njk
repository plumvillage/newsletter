<article>
    {% set artCall = articleCalligraphies(page.fileSlug) %}
    {%- if artCall.hasCalligraphy %}
        <h1 id="{{ title | slugify }}" class="chapter calligraphyTitle">
        {% image artCall.calligraphyPath, "articleCalligraphy" %}
    {%- else %}
        <h1 id="{{ title | slugify }}" class="chapter">
        {{ title }}
    {%- endif %}
    <h2 class="author">{{ author }}</h2>
    {%- if pathPrefix != "" %}
        {{ content | safe | replace("/media/", pathPrefix+"/media/") }}
    {%- else %}
        {{ content | safe }}
    {%- endif %}
    <div class="article-end"></div>
</article>
