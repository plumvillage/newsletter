    {%- endif %}
</head>
<body>
    <div class="frontcover">
        <img src="/media/FrontCover_EN.jpg">
    </div>
    <div class="frontCollage">
        <img src="/media/LTLM45-2022 Front Back and Photos p4 bleed.jpg">
    </div>
    <div class="contents">
        <h1>{{ i18n.toc }}</h1>

        <ul class="toc">
            {%- for article in articles -%}
                <li><a href="#ch{{ loop.index }}">{{ article.data.title }}</a></li>
            {%- endfor -%}
        </ul>
    </div>
    {%- for article in articles -%}
        <article>
            <h1 id="ch{{ loop.index }}" class="chapter">{{ article.data.title }}</h1>
            <h2 class="author">{{ article.data.author }}</h2>
            {{ article.data.content | safe }}
        </article>
    {%- endfor -%}
</body>

</html>
