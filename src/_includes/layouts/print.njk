{% extends "layouts/print-frame.njk" %}


{% block content %}
    {%- if pagedjsCLI != true %}
    <div class="front-cover bleed">
        {% image ["front-cover-", locale, "-bleed.jpg"] | join %}
    </div>
    <div class="front-collage bleed">
        {% image "front-photos-bleed.jpg" %}
    </div>
    <div class="parallels">
        {% image "Calligraphy/Parallels VI p1 Ngay Vertical.jpg" %}
        {% image "Calligraphy/Parallels VI p2 Bon Vertical.jpg" %}
    </div>

    {%- endif %}

    {%- for article in articles -%}
        <article class="article-{{ article.data.title | slugify }}">
            <h1 id="{{ article.data.title | slugify }}" class="chapter">
            {% set artCall = articleCalligraphies(article.fileSlug) %}
            {%- if artCall.hasCalligraphy %}
                {% image artCall.calligraphyPath %}
            {%- else %}
                {{ article.data.title }}
            {%- endif %}
            </h1>
            <div class="author">{{ article.data.author }}</div>
            {%- if pagedjsCLI == true %}
                {{ article.data.content | safe | replace("/media/", "../../media/") }}
            {%- else %}
                {{ article.data.content | safe }}
            {%- endif %}
            <div class="article-end"></div>
        </article>
    {%- endfor -%}

    <div class="contents">
        <h1>{{ i18n.toc }}</h1>

        <ul class="toc">
            {%- for article in articles -%}
                <li><a href="#ch{{ loop.index }}">{{ article.data.title }}</a></li>
            {%- endfor -%}
        </ul>
    </div>

    {%- if pagedjsCLI != true %}
    <div class="back-collage bleed">
        {% image "back-photos-bleed.jpg" %}
    </div>
    <div class="back-cover bleed">
        {% image ["back-cover-", locale, "-bleed.jpg"] | join %}
    </div>
    {%- endif %}

    {# {% include "partials/testing.njk" %} #}
{% endblock %}
