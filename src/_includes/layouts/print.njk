{% extends "layouts/print-frame.njk" %}

{% block content %}

    {%- if pagedjsCLI != true %}
    <div class="front-cover bleed">
        <div class="full-page-image">
            {% image ["LTLM45-2022-cover-front-v2022-02-", locale, "-", size ,"-bleed.jpg"] | join %}
        </div>
    </div>

    </div>
    <div class="front-collage bleed">
        {% image "LTLM45-2022-inside-covers-V2022-02-left.jpg" %}
    </div>
    <div class="opening-page">
        {% image "calligraphy/zen-circle.jpg" %}
    </div>
    {%- endif %}

    {%- for article in articles -%}
        {% set title = article.data.title %}
        {% set author = article.data.author %}
        {% set content = article.data.content %}
        {% set fileSlug = article.fileSlug %}
        {% include "partials/article-content.njk" %}
    {%- endfor -%}

    {# Insert old photo pages somewhere in the middle? #}
    {%- if pagedjsCLI != true %}
    <div class="back-collage bleed">
        {% image "back-photos-bleed.jpg" %}
    </div>
    <div class="front-collage bleed">
        {% image "front-photos-bleed.jpg" %}
    </div>
    {%- endif %}

    <div id="table-of-contents">
        <h1>{{ i18n.toc }}</h1>
        <ul class="toc">
            {%- for article in articles -%}
                <li><a class="toc-links" href="#{{ article.data.title | slugify }}">
                    <span class="toc-title">{{ article.data.title }}</span>
                    {%- if article.data.author != "" -%}
                    <br/><span class="toc-author">{{ article.data.author }}</span>
                    {%- endif -%}
                </a></li>
            {%- endfor -%}
        </ul>
    </div>

    {%- if pagedjsCLI != true %}
    <div class="back-collage bleed">
        {% image "LTLM45-2022-inside-covers-V2022-02-right.jpg" %}
    </div>
    <div class="back-cover bleed">
        <div class="full-page-image">
            {% image ["LTLM45-2022 cover v2022-02-", locale, "-back.jpg"] | join %}
        </div>
    </div>
    {%- endif %}

    {# {% include "partials/testing.njk" %} #}
{% endblock %}
