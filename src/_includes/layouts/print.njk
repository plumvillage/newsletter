{% set i18n = site[locale] %}
{% set articles = collections["articles_" + locale] %}
<!DOCTYPE html>
<html dir="ltr" lang="{{ locale }}">
<head>
    <meta charset="utf-8" />
    <title>{{ i18n.title }}</title>
    <meta name="author" content="{{ i18n.author }}" />
    <meta name="subject" content="" />
    <meta name="keywords" content="" />
    <meta name="date" content="2022" />


    <link rel="stylesheet" href="/css/pdf-styles.css">
    {%- if destination == "printhouse" %}
    {# <style>
        {% include "/css/crop-marks.css" %}
    </style> #}
    {%- endif %}

    {%- if destination == "browser" %}
    <!-- paged.js preview in browser -->
    <script src="{{ '/pagedjs/paged.polyfill.js' | url }}"></script>
    <link rel="stylesheet" href="{{ '/pagedjs/interface.css' | url }}">
    {%- endif %}
</head>
<body>
    {%- if destination == "browser" %}
    <div class="front-cover">
        <img src="/media/front-cover-{{ locale | upper }}.jpg">
    </div>
    <div class="front-collage">
        <img src="/media/LTLM45-2022 Front Back and Photos p4 bleed.jpg">
    </div>
    {%- endif %}

    {%- for article in articles -%}
        <article>
            <h1 id="ch{{ loop.index }}" class="chapter">{{ article.data.title }}</h1>
            <h2 class="author">{{ article.data.author }}</h2>
            {{ article.data.content | safe }}
        </article>
    {%- endfor -%}

    <div class="contents">
        <h1>{{ i18n.toc }}</h1>

        <ul class="toc">
            {%- for article in articles -%}
                <li><a href="#ch{{ loop.index }}">{{ article.data.title }}</a></li>
            {%- endfor -%}
        </ul>
    </div>

    {%- if destination == "browser" %}
    <div class="back-collage">
        <img src="/media/LTLM45-2022 Front Back and Photos p6 bleed.jpg">
    </div>
    <div class="back-cover">
        <img src="/media/back-cover-{{ locale | upper }}.jpg">
    </div>
    {%- endif %}
</body>

</html>
