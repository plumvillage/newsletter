---
permalink: "vi/"
---
{% extends "layouts/web.njk" %}

    {% block content %}
    <nav class="nav-language">
        <a href="/en/">English</a>
    </nav>
    <header class="index-header">
        <h1><img src="{% imageSrc "calligraphy/la tho lang mai/la-tho-lang-mai.svg" %}" alt="Lá thư Làng Mai"></h1>
        <h2>số 45 - năm 2022</h2>
    </header>
    <div class="index">
        {%- for article in collections.articles_vi -%}
        <article class="index-item">
            <header class="entry-header">
                <div class="entry-meta">
                    <span class="author"><a href="{{ article.url }}">{{ article.data.author }}</a></span>
                </div>
                <h2>
                    <a href="{{ article.url }}">{{ article.data.title }}</a><br>
                    <span style="font-size: 60%;"><a href="{{ article.url | replace('bai', 'articles-print-preview') }}">Print Preview</a></span>
                </h2>
            </header>
            </header>
            <div class="entry-content">
                {{ article.data.content | safe }}
            </div>
        </article>
        {%- endfor -%}
    </div>
    {% endblock %}

